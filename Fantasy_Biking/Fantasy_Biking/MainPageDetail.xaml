<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fantasy_Biking.MainPageDetail">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Padding="0,30,0,0"
                Text="Points Total"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="Title"
                FontAttributes="Bold"
                TextColor="Black"/>
            <Label
                Padding="0,30,0,0"
                Text="My Team"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="Title"
                FontAttributes="Bold"
                TextColor="Black"/>
            <StackLayout Padding="25,25,25,0">
                <Frame HeightRequest="170"
                       Padding="10,10,10,10"
                       CornerRadius="40"
                       BackgroundColor="AliceBlue">
                    <ListView
                        BackgroundColor="AliceBlue">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="lol"
                                          TextColor="Black"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>
            </StackLayout>
            <Label
                Padding="0,0,0,0"
                Text="Next race name"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="Title"
                FontAttributes="Bold"
                TextColor="Black"/>
            <Image HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="100" WidthRequest="200" x:Name="Placeholder"
                   Source="Placeholder.png"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>